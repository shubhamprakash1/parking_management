<div class="row">
  <div class="col-md-12 col-sm-12">
    <%= form_for(@event) do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :name, class: "col-md-4 control-label" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <br>
      <div class="field">
        <%= f.label :description, class: "col-md-4 control-label" %><br>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <br>
      <div class="field">
        <%= f.label :schedule_at %><br>
        <%= f.datetime_picker :schedule_at %>
      </div>
      <br>
      <div class="field">
        <%= f.label :map, class: "col-md-4 control-label" %><br>
        <%= f.text_area :map, class: "form-control" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-default btn-success" %>
      </div>
      <br>
    <% end %>
  </div>
</div>
