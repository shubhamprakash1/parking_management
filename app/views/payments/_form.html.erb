      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% @payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="field">
      <%= f.label :first_name, "Name", class: "col-md-12 control-label" %><br>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
     <div class="field">
      <%= f.label :credit_card_number, class: "col-md-12 control-label" %><br>
      <%= f.text_field :credit_card_number, class: "form-control" %>
    </div>
    
    <div class="field">
      <%= f.label :card_security_code, class: "col-md-12 control-label" %><br>
      <%= f.text_field :card_security_code, class: "form-control" %>
    </div>
    
    <div class="field">
      <%= f.label :expiration_month, class: "col-md-12 control-label" %><br>
      <%= f.number_field :expiration_month,min: 1, max: 12, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :expiration_year, class: "col-md-12 control-label" %><br>
      <%= f.number_field :expiration_year,min: 2015, max: 2050, class: "form-control" %>
    </div> 
    
    <div class="field">
      <%=  number_to_currency @parking.price %>
    </div> 
     <%= f.hidden_field :amoumt, :value => @parking.price%> 
     <%= f.hidden_field :parking_id, :value => @parking.id %> 
    
    <br>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-default btn-success" %>
    </div>
  </div>
<% end %>
